<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center"
        android:padding="7dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_empty_blue"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/review"
            android:layout_width="80dp"
            android:layout_height="80dp" >
        </ImageView>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <ImageView
                    android:src="@mipmap/place"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />
                <TextView
                    android:id="@+id/rePlace"
                    android:layout_marginLeft="5dp"
                    android:text="대전시 대덕구 봉구비어"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/reTitle"
                    android:text="간맥이었으나 과하게 마신 후기"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <ImageView
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/people"
                        android:layout_width="17dp"
                        android:layout_height="17dp" />
                    <TextView
                        android:id="@+id/rePNum"
                        android:text="5명"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                    <ImageView
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/date"
                        android:layout_width="17dp"
                        android:layout_height="17dp" />
                    <TextView
                        android:id="@+id/reDate"
                        android:text="2020-11-09"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
